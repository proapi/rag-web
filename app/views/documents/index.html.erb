<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <%= render "layouts/header" %>

  <!-- Main Content -->
  <main class="pt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Page Header -->
      <div class="mb-8 flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Documents</h1>
          <p class="mt-2 text-sm text-gray-600">
            Manage and view documents indexed in the RAG system.
            <% if @total_documents > 0 %>
              <span class="font-medium text-indigo-600"><%= @total_documents %></span> <%= @total_documents == 1 ? 'document' : 'documents' %> found.
            <% end %>
          </p>
        </div>

        <!-- Upload Button -->
        <%= link_to new_document_path,
            data: { turbo_frame: "document_upload_modal" },
            class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
          <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
          Upload Document
        <% end %>
      </div>

      <!-- Flash Messages -->
      <div id="flash-messages">
        <% if flash[:alert] %>
          <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-sm text-red-800"><%= flash[:alert] %></p>
            </div>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="mb-6 bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-green-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-sm text-green-800"><%= flash[:notice] %></p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Documents List -->
      <% if @documents.empty? %>
        <!-- Empty State with Upload Prompt -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No documents found</h3>
          <p class="mt-2 text-sm text-gray-500">
            Get started by uploading your first document to the RAG system.
          </p>
          <p class="mt-1 text-sm text-gray-500">
            Documents will appear here once they have been indexed.
          </p>
        </div>
      <% else %>
        <!-- Documents Cards -->
        <div id="documents" class="space-y-6">
          <% @documents.each do |document| %>
            <%= render "document", document: document %>
          <% end %>
        </div>
      <% end %>
    </div>
  </main>

  <!-- Turbo Frame for Upload Modal -->
  <%= turbo_frame_tag "document_upload_modal" %>
</div>
