<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <%= render "layouts/header" %>

  <!-- Main Content -->
  <main class="pt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Page Header -->
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Documents</h1>
        <p class="mt-2 text-sm text-gray-600">
          Manage and view documents indexed in the RAG system.
          <% if @total_documents > 0 %>
            <span class="font-medium text-indigo-600"><%= @total_documents %></span> <%= @total_documents == 1 ? 'document' : 'documents' %> across
            <span class="font-medium text-indigo-600"><%= @total_files %></span> <%= @total_files == 1 ? 'file' : 'files' %>.
          <% end %>
        </p>
      </div>

      <!-- Flash Messages -->
      <% if flash[:alert] %>
        <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-sm text-red-800"><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>

      <!-- Documents List -->
      <% if @documents_by_file.empty? %>
        <!-- Empty State with Upload Prompt -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No documents found</h3>
          <p class="mt-2 text-sm text-gray-500">
            Get started by uploading your first document to the RAG system.
          </p>
          <p class="mt-1 text-sm text-gray-500">
            Documents will appear here once they have been indexed.
          </p>
        </div>
      <% else %>
        <!-- Documents Cards Grouped by File -->
        <div class="space-y-6">
          <% @documents_by_file.each do |file_name, documents| %>
            <% first_doc = documents.first %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
              <!-- Card Header -->
              <div class="bg-gradient-to-r from-indigo-50 to-purple-50 px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                      <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div>
                      <h3 class="text-lg font-semibold text-gray-900 break-all">
                        <%= file_name %>
                      </h3>
                      <p class="text-sm text-gray-600">
                        <span class="font-medium"><%= documents.length %></span> <%= documents.length == 1 ? 'document' : 'documents' %>
                      </p>
                    </div>
                  </div>

                  <!-- File Type Badge -->
                  <% file_type = first_doc["file_type"] || "unknown" %>
                  <% badge_class = case file_type.downcase
                       when ".pdf" then "bg-red-100 text-red-800"
                       when ".txt", ".md" then "bg-blue-100 text-blue-800"
                       when ".doc", ".docx" then "bg-blue-100 text-blue-800"
                       when ".html", ".htm" then "bg-orange-100 text-orange-800"
                       else "bg-gray-100 text-gray-800"
                       end %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= badge_class %>">
                    <%= file_type.upcase.sub('.', '') %>
                  </span>
                </div>
              </div>

              <!-- Card Body -->
              <div class="px-6 py-5">
                <!-- File Path -->
                <div class="mb-6">
                  <h4 class="text-sm font-semibold text-gray-900 mb-2 flex items-center">
                    <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                    </svg>
                    File Location
                  </h4>
                  <div class="bg-gray-50 rounded-lg p-4">
                    <p class="text-sm font-mono text-gray-900 break-all"><%= first_doc["file_path"] || "N/A" %></p>
                  </div>
                </div>

                <!-- Document IDs -->
                <div>
                  <h4 class="text-sm font-semibold text-gray-900 mb-3 flex items-center">
                    <svg class="h-5 w-5 mr-2 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"/>
                    </svg>
                    Document IDs
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 text-indigo-800">
                      <%= documents.length %>
                    </span>
                  </h4>
                  <div class="bg-gray-50 rounded-lg p-4">
                    <% if documents.length <= 5 %>
                      <!-- Show all IDs if 5 or fewer -->
                      <div class="space-y-2">
                        <% documents.each do |doc| %>
                          <div class="flex items-center space-x-2 text-sm">
                            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <code class="font-mono text-gray-700"><%= doc["doc_id"] %></code>
                          </div>
                        <% end %>
                      </div>
                    <% else %>
                      <!-- Show scrollable list if more than 5 -->
                      <div class="max-h-48 overflow-y-auto space-y-2">
                        <% documents.each do |doc| %>
                          <div class="flex items-center space-x-2 text-sm">
                            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <code class="font-mono text-gray-700"><%= doc["doc_id"] %></code>
                          </div>
                        <% end %>
                      </div>
                      <p class="mt-2 text-xs text-gray-500 italic">Scroll to view all document IDs</p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </main>
</div>
