<%= turbo_frame_tag "document_upload_modal" do %>
  <div data-controller="modal">
    <!-- Modal Backdrop -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-40" data-action="click->modal#close"></div>

    <!-- Modal Panel -->
    <div class="fixed inset-0 z-50 overflow-y-auto">
      <div class="flex min-h-full items-center justify-center p-4">
        <div class="relative transform overflow-hidden rounded-lg bg-white shadow-xl transition-all w-full max-w-lg" data-modal-target="panel">
        <!-- Modal Header -->
        <div class="bg-gradient-to-r from-indigo-50 to-purple-50 px-6 py-4 border-b border-gray-200">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0">
                <svg class="h-8 w-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900">Upload Document</h3>
            </div>
            <%= link_to documents_path, data: { turbo_frame: "_top" }, class: "text-gray-400 hover:text-gray-500 transition-colors" do %>
              <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Flash Messages -->
        <% if flash[:alert] %>
          <div class="mx-6 mt-4 bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <p class="text-sm text-red-800"><%= flash[:alert] %></p>
            </div>
          </div>
        <% end %>

        <!-- Modal Body -->
        <div class="px-6 py-6">
          <%= form_with url: documents_path, method: :post, multipart: true, data: { turbo_frame: "document_upload_modal" } do |form| %>
            <!-- File Input -->
            <div class="mb-6">
              <label class="block text-sm font-semibold text-gray-900 mb-2">
                Select Document
              </label>

              <%= form.file_field :file,
                  id: "file-upload",
                  class: "sr-only",
                  accept: ".pdf,.txt,.md,.html,.htm,.doc,.docx",
                  required: true,
                  "data-action": "change->modal#updateFileName" %>

              <label for="file-upload" class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-indigo-400 hover:bg-indigo-50 transition-all cursor-pointer">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  <div class="text-sm text-gray-600">
                    <span class="font-medium text-indigo-600 hover:text-indigo-500">Click to upload a file</span>
                    <span class="block mt-1">or drag and drop</span>
                  </div>
                  <p class="text-xs text-gray-500">
                    PDF, TXT, MD, HTML, DOC up to 10MB
                  </p>
                </div>
              </label>

              <!-- Selected File Name Display -->
              <div class="mt-3 text-center">
                <p class="text-sm font-medium text-indigo-600 min-h-[1.5rem] flex items-center justify-center" data-modal-target="fileName"></p>
              </div>
            </div>

            <!-- Auto-index Checkbox -->
            <div class="mb-6">
              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <%= form.check_box :auto_index,
                      class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded",
                      checked: true %>
                </div>
                <div class="ml-3">
                  <label for="auto_index" class="text-sm font-medium text-gray-900">
                    Automatically index after upload
                  </label>
                  <p class="text-xs text-gray-500 mt-1">
                    When enabled, the document will be indexed immediately after upload. Otherwise, you'll need to manually trigger indexing.
                  </p>
                </div>
              </div>
            </div>

            <!-- Form Actions -->
            <div class="flex items-center justify-end space-x-3 pt-4 border-t border-gray-200">
              <%= link_to "Cancel",
                  documents_path,
                  data: { turbo_frame: "_top" },
                  class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
              <%= form.submit "Upload Document",
                  class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
<% end %>
